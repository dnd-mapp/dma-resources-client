{
  "name": "@dnd-mapp/dma-resources-client",
  "version": "0.0.0",
  "license": "UNLICENSED",
  "description": "An Angular application for managing static game resources, inspecting logs, and configuring the D&D Mapp Resources Server.",
  "private": true,
  "author": {
    "email": "mail.dndmapp@gmail.com",
    "name": "NoNamer777"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dnd-mapp/dma-resources-client.git"
  },
  "engines": {
    "node": ">=24",
    "npm": ">=11",
    "pnpm": "~10"
  },
  "packageManager": "pnpm@10.23.0",
  "publishConfig": {
    "directory": "dist/dma-resources-client",
    "registry": "https://npm.pkg.github.com/"
  },
  "files": [
    "**/*"
  ],
  "main": "browser/index.html",
  "scripts": {
    "prepublishOnly": "node build/pre-publish.mjs",
    "start": "ng serve",
    "docker:build": "docker buildx bake -f .docker/docker-bake.hcl",
    "build": "ng build",
    "build:dev": "ng build -c dev",
    "test": "ng test",
    "test:dev": "ng test -c dev",
    "test:reports": "vite preview --outDir coverage/dma-resources-client/coverage --open",
    "e2e": "playwright test -c e2e/playwright.config.ts",
    "e2e:dev": "playwright test -c e2e/playwright.config.ts --ui",
    "e2e:reports": "playwright show-report coverage/e2e",
    "lint": "ng lint",
    "format:check": "prettier -l .",
    "format:write": "prettier -w ."
  },
  "dependencies": {
    "@angular/cdk": "~21.0.0",
    "@angular/common": "~21.0.0",
    "@angular/compiler": "~21.0.0",
    "@angular/core": "~21.0.0",
    "@angular/forms": "~21.0.0",
    "@angular/platform-browser": "~21.0.0",
    "@angular/router": "~21.0.0",
    "@dnd-mapp/dma-ui-angular": "~1.9.0",
    "rxjs": "~7.8.0",
    "tslib": "~2.8.0"
  },
  "devDependencies": {
    "@angular-eslint/builder": "~21.0.0",
    "@angular/build": "~21.0.0",
    "@angular/cli": "~21.0.0",
    "@angular/compiler-cli": "~21.0.0",
    "@eslint/js": "~9.39.0",
    "@playwright/test": "~1.57.0",
    "@types/node": "~24.10.0",
    "@vitest/browser-playwright": "~4.0.0",
    "@vitest/coverage-v8": "~4.0.0",
    "@vitest/ui": "~4.0.0",
    "angular-eslint": "~21.0.0",
    "eslint": "~9.39.0",
    "eslint-config-prettier": "~10.1.0",
    "jsdom": "~27.2.0",
    "playwright": "~1.57.0",
    "prettier": "~3.6.0",
    "prettier-plugin-organize-imports": "~4.3.0",
    "typescript": "~5.9.0",
    "typescript-eslint": "~8.48.0",
    "vite": "~7.2.0",
    "vitest": "~4.0.0"
  }
}
